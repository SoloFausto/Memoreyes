<div style="background-color:#@color; height:50vh; width:70vw;" @onclick="OnClickCallback">
    <p style="color: white; font-size:50px">@content</p>
</div>
<script>
    window.triggerClick = (elt) => elt.click();
</script>
@code {
    [Parameter]
    public String color { get; set; }
    [Parameter]
    public String content { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> OnClickCallback { get; set; }
}
